@using H3ArT.Utility
@using H3ArT.Models.Models

@if (User.IsInRole(SD.Role_Admin))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Admin Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
            }

            .admin-page {
                max-width: 600px;
                margin: auto;
                background-color: #fff;
                border-radius: 10px;
                padding: 40px;
                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
            }

            h1 {
                text-align: center;
                margin-bottom: 30px;
                color: #343a40;
            }

            p {
                text-align: center;
                color: #6c757d;
                font-size: 18px;
                margin-bottom: 30px;
            }

            .admin-icon {
                font-size: 64px;
                color: #007bff;
                text-align: center;
                margin-bottom: 30px;
            }

            /* Add styles for the admin-only content */
            .admin-content {
                background-color: #f8f9fa;
                border-radius: 10px;
                padding: 20px;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
                text-align: center; /* Center align text */
            }

                .admin-content h2 {
                    color: #007bff;
                    margin-bottom: 20px;
                }

                .admin-content p {
                    color: #343a40;
                    margin-bottom: 15px;
                }

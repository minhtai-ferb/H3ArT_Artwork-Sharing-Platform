@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    body {
        margin-top: 20px;
    }

    .avatar {
        width: 200px;
        height: 200px;
    }

    .personal-info label {
        font-weight: bold;
    }

    .personal-info input[type="text"] {
        width: 100%;
    }
</style>
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Edit Profile</h1>
    <hr>
    <form id="profile-form" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.Input.AvatarImage) ? "~/image/defaultava/default.jpg" : Model.Input.AvatarImage)" class="avatar img-circle img-thumbnail" alt="avatar">

                    <h6>Upload a different photo...</h6>
                    <input type="file" name="file" class="form-control" onchange="previewAvatar(this)">
                </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <h3>Personal info</h3>

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Username:</label>
                    <div class="col-lg-8">
                        <input asp-for="Username" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="col-lg-3 control-label">Phone number:</label>
                    <div class="col-lg-8">
                        <input asp-for="Input.PhoneNumber" class="form-control">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.FullName" class="col-lg-3 control-label">Full name:</label>
                    <div class="col-lg-8">
                        <input asp-for="Input.FullName" class="form-control">
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Gender" class="col-lg-3 control-label">Gender:</label>
                    <div class="col-lg-8">
                        <select asp-for="Input.Gender" class="form-control">
                            <option value="true">Male</option>
                            <option value="false">Female</option>
                        </select>
                    </div>

                <div class="col-lg-8 justify-content-center d-flex pt-3">
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </div>



            </div>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function previewAvatar(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
